<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/textJolly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />


<!--PICturesss-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textJolly"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectanglelight"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/executive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executives"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_below="@+id/executive"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pic6"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>