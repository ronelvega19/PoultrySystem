<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettings">



    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />


    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Jolly Code"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/emailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/nameProfile"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/profileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_below="@+id/emailProfile"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

<!--   PANEL NG MGA PINDUTAN EMEEE -->

    <RelativeLayout
        android:id="@+id/profileGroup"
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:background="@drawable/profileborder"
        android:layout_below="@+id/profileTV"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        >

<!--    ACCOUNT DETAILS PANEL    -->

        <RelativeLayout
            android:id="@+id/accountDetailsGROUP"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"

                />
            <TextView
                android:id="@+id/accountDetailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Details"
                android:layout_toRightOf="@+id/userImage"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backimg2"
                android:layout_toRightOf="@+id/accountDetailTV"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="100dp"

                />

        </RelativeLayout>

<!--      SETTINGS PANEL    -->

        <RelativeLayout
            android:id="@+id/settingsGroup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accountDetailsGROUP"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/settingsImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/settings"

                />

            <TextView
                android:id="@+id/settingsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/settingsImage"
                android:text="Settings"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/settingsTV"
                android:background="@drawable/backimg2" />

        </RelativeLayout>

<!--       NOTIFICATION PANEL       -->

        <RelativeLayout
            android:id="@+id/notificationGroup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingsGroup"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/notification"

                />

            <TextView
                android:id="@+id/notificationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/notificationImage"
                android:text="Notification"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/notificationTV"
                android:background="@drawable/backimg2" />

        </RelativeLayout>
<!--    CHANGE PASSWORD PANEL   -->


        <RelativeLayout
            android:id="@+id/changepassGroup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationGroup"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="21dp">

            <ImageView
                android:id="@+id/changepassImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/changepass"

                />

            <TextView
                android:id="@+id/changepassTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/changepassImage"
                android:text="Change Password"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/changepassTV"
                android:background="@drawable/backimg2" />


        </RelativeLayout>









</RelativeLayout>

    <RelativeLayout
        android:id="@+id/signoutGroup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileGroup"


        >

        <ImageView
            android:id="@+id/signoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:id="@+id/signoutTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_toRightOf="@+id/signoutImage"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="#d40000"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/signoutTV"
            android:background="@drawable/backimg2" />


    </RelativeLayout>

    </RelativeLayout>
