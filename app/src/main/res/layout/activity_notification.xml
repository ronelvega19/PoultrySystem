<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification">


<!--    NOTIFICATION PANELLLLLLL -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00703d"
        android:id="@+id/notificationPanel"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Notification"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>

<!--    END NOTIFICATION  -->

    <ScrollView
        android:layout_below="@+id/notificationPanel"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in at 2:30 pm"
                android:textSize="20sp"
                android:background="@drawable/textborder"
                android:padding="5dp"



                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fan has been turn on (time eme)"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/textborder"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morning water initiated (eme)"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/textborder"
                />

        </LinearLayout>
    </ScrollView>






</RelativeLayout>